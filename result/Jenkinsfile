pipeline {
    agent any 
/*
    tools{
        maven 'maven 3.6.1'
    }
*/

    stages{
        stage("build"){
            when{
                changeset "**/result/**"
            }
            steps{
                echo 'Compiling result app'
                dir('result'){
                    sh 'npm install'
                }
            }
        }
        stage("test"){
            when{
                changeset "**/result/**"
            }
            steps{
                echo 'Running Unit Tests on result app'
                dir('result'){
                    sh 'npm install'
                    sh 'npm test'
                }
            }
        }

/*
        stage("package"){
            when{
                branch 'master'
                changeset "**/result/**"
            }
            steps{
                echo 'Packaging result app'
                dir('worker'){
                    sh 'mvn package -DskipTests'
                    archiveArtifacts artifacts: '**/target/*.jar', fingerprint: true
                }
            }
*/
        }
    }

    post{
      always{
          echo 'Building multibranch pipeline for worker is completed..'
      }
    }
}
